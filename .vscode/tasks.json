{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                ".\\bin\\",
                "-sourcepath",
                ".\\",
                "*.java"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "run help",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram",
                "-help"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "run version",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram",
                "-version"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "generate docs",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-d",
                ".\\docs\\",
                "-sourcepath",
                ".\\",
                "*.java"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}