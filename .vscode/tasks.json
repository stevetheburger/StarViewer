{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                ".\\bin\\",
                "-sourcepath",
                ".\\",
                "*.java"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "run help",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram",
                "-help"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "run version",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".\\bin\\",
                "cProgram",
                "-version"
            ],
            "group": "test",
            "dependsOn": "build"
        },
        {
            "label": "generate docs",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-d",
                ".\\docs\\",
                "cProgram.java",
                ".\\Logging\\*.java",
                ".\\Data\\*.java"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Compile StarViewer with JavaFX",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d", ".\\bin\\",
                "-cp", "C:/Program Files/JavaFX/javafx-sdk-25/lib/*",
                "--module-path", "C:/Program Files/JavaFX/javafx-sdk-25/lib",
                "--add-modules", "javafx.controls,javafx.fxml",
                "*.java", "Data/*.java", "Logging/*.java", "UI/*.java"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run StarViewer Application",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", ".;C:/Program Files/JavaFX/javafx-sdk-25/lib/*",
                "--module-path", "C:/Program Files/JavaFX/javafx-sdk-25/lib",
                "--add-modules", "javafx.controls,javafx.fxml",
                "UI.StarViewerApp"
            ],
            "group": "test",
            "dependsOn": "Compile StarViewer with JavaFX",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}